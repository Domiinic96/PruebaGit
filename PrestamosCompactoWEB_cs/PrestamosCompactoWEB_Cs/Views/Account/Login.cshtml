
@using PrestamosCompactoWEB_Cs.Models;

@model LoginViewModel
@{
    <br />
    <br />
    <br />
    ViewBag.Title = "Iniciar sesión";
}

<style>
    body {
        overflow-x: hidden;
    }
   
    a {
        width: 50%;
        margin-top: 95px;
        border-color: #36C197;
        background-color:#36C197;
        color:white;
        font-weight:bold;
        font-size:50px;
        font-weight:900;
    }
  

  
</style>
<br>

<p >
    <h1 style="color:#36C197">
        @ViewBag.Title.
    </h1></p>
<div class="row">
    <hr style="border-color:#36C197;" />
    <div class="col-md-6">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <text>
                    <p style="color:#36C197">Use una cuenta local para iniciar sesión.</p>

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label", @Style = "Color:#36C197;" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @Style = "Width:250px" })
                            @*@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })*@
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label", @Style = "Color:#36C197;" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @Style = "width:250px" })
                            @*@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })*@
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Iniciar sesión" style="background-color:#36C197;color:white;font-weight:bold" class="btn btn-default" />

                        </div>
                    </div>


                </text>
            }


        </section>
    </div>


    <div class="col-md-6" style="padding-top:5%;">

        <a href="~/Account/Register" onmouseover="this.style.backgroundColor = '#36C197'; style.color = 'white';" style="font-size:x-large; font-weight:600; background:#36C197" class="btn-lg">
            Solicitar Apertura de Nueva Cuenta
        </a>
       
    </div>
  
</div>


        <div class="col-md-4">
            <section id="socialLoginForm">
                @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
            </section>
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }





